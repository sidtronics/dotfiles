(in-package :stumpwm)

;; Setup Nvlime server
(ql:quickload :nvlime)
(nvlime:main 
 :interface #(127 0 0 1)
 :port 7005
 :backend :nvlime-usocket)

;; Load config
(defmacro config (path)
  (uiop:merge-pathnames*
    (uiop:merge-pathnames* #P".config/stumpwm/" (user-homedir-pathname))
    path))

(load (config "theme.lisp"))
(load (config "keymaps.lisp"))
(load (config "modeline.lisp"))
(load (config "ui.lisp"))
; vim: ft=lisp
